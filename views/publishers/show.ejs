<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/authAndPub.css" />
<link rel="stylesheet" href="/css/style.css" />

<section class="page-header d-flex justify-content-between align-items-center">
  <div class="container d-flex justify-content-between align-items-center">
    <h1>ğŸ¢ All Publishers</h1>
    <a href="/publishers/new" class="btn btn-dark btn-lg">New Publisher</a>
  </div>
</section>

<div class="container mt-4">
  <% if (publishers && publishers.length > 0) { %>
  <div class="table-container">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th class="responsive-hide">Address</th>
            <th class="responsive-hide">URL</th>
            <th class="responsive-hide">Phone</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% publishers.forEach(publisher => { %>
          <tr>
            <td><span class="publisher-name"><%= publisher.name %></span></td>
            <td class="responsive-hide">
              <span class="contact-text"><%= publisher.address %></span>
            </td>
            <td class="responsive-hide">
              <span class="contact-text"><%= publisher.url %></span>
            </td>
            <td class="responsive-hide">
              <span class="contact-text"><%= publisher.phone %></span>
            </td>
            <td>
              <div class="actions-cell d-flex gap-2">
                <!-- âœï¸ Edit Button -->
                <a
                  href="/publishers/edit/<%= publisher.publisher_id %>"
                  class="btn btn-sm btn-warning-custom"
                >
                  Edit
                </a>

                <!-- ğŸ—‘ï¸ Delete Button -->
                <form
                  method="POST"
                  action="/publishers/delete/<%= publisher.publisher_id %>"
                  style="display: inline"
                  onsubmit="return confirm('Are you sure you want to delete this publisher?');"
                >
                  <button type="submit" class="btn btn-sm btn-danger-custom">
                    Delete
                  </button>
                </form>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <% } else { %>
  <div class="empty-state">
    <div class="empty-state-icon">ğŸ“­</div>
    <h2>No publishers found in the system.</h2>
    <p>Start by adding your first publisher to get started.</p>
    <a href="/publishers/new" class="btn btn-dark mt-3">Add Publisher</a>
  </div>
  <% } %>
</div>
