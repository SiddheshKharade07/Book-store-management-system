<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/authAndPub.css" />
<link rel="stylesheet" href="/css/style.css" />

<section class="page-header d-flex justify-content-between align-items-center">
  <div class="container d-flex justify-content-between align-items-center">
    <h1>‚úçÔ∏è All Authors</h1>
    <a href="/authors/new" class="btn btn-dark btn-lg"> New Author</a>
  </div>
</section>

<div class="container mt-4">
  <% if (authors && authors.length > 0) { %>
  <div class="table-container">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Author ID</th>
            <th>Name</th>
            <th class="responsive-hide">URL</th>
            <th class="responsive-hide">Country</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% authors.forEach(author => { %>
          <tr>
            <td><span class="author-id"><%= author.author_id %></span></td>
            <td><span class="author-name"><%= author.name %></span></td>
            <td class="responsive-hide">
              <span class="contact-text"><%= author.url %></span>
            </td>
            <td class="responsive-hide">
              <span class="contact-text"><%= author.address %></span>
            </td>
            <td>
              <div class="actions-cell d-flex gap-2">
                <!-- ‚úèÔ∏è Edit Button -->
                <a
                  href="/authors/edit/<%= author.author_id %>"
                  class="btn btn-sm btn-warning-custom"
                >
                  Edit
                </a>

                <!-- üóëÔ∏è Delete Button -->
                <form
                  method="POST"
                  action="/authors/delete/<%= author.author_id %>"
                  style="display: inline"
                  onsubmit="return confirm('Are you sure you want to delete this author?');"
                >
                  <button type="submit" class="btn btn-sm btn-danger-custom">
                    Delete
                  </button>
                </form>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <% } else { %>
  <div class="empty-state">
    <div class="empty-state-icon">üì≠</div>
    <h2>No authors found in the system.</h2>
    <p>Start by adding your first author to get started.</p>
    <a href="/authors/new" class="btn btn-dark mt-3">add author</a>
  </div>
  <% } %>
</div>
