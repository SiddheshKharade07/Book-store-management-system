<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/css/home.css" />

<section class="recent-books-section">
  <div class="container mt-4">
    <% if (books && books.length > 0) { %>
    <h2 class="section-title">
      <% if (searchType === "author") { %> ðŸ“– Books written by "<%= searchTerm
      %>" <% } else if (searchType === "publisher") { %> ðŸ“– Books published by
      "<%= searchTerm %>" <% } else if (searchType === "isbn") { %> ðŸ“– Book with
      ISBN "<%= searchTerm %>" <% } else { %> ðŸ“– Search Results for "<%=
      searchTerm %>" <% } %>
    </h2>

    <div class="row g-4 mt-3">
      <% books.forEach(book => { %>
      <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
        <div class="card book-card text-center p-3">
          <div class="book-card-body">
            <h5 class="book-title"><%= book.title %></h5>
            <% if (book.author_name) { %>
            <p class="book-author">
              <strong>Author:</strong> <%= book.author_name %>
            </p>
            <% } %>
            <p><strong>Publisher:</strong> <%= book.publisher_name %></p>
            <p><strong>Year:</strong> <%= book.year %></p>
            <p class="book-price">
              <strong>Price:</strong> â‚¹<%= parseFloat(book.price).toFixed(2) %>
            </p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>

    <% } else { %>
    <h2 class="section-title">No results found</h2>
    <div class="text-center mt-4 mb-5 " style="height:20vh;">
      <p class="mb-5">No books found for "<%= searchTerm %>".</p>
    </div>
    <% } %>
  </div>
</section>
