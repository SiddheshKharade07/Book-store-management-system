<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/books.css" />
<link rel="stylesheet" href="/css/style.css" />

<section class="page-header">
  <div class="container">
    <h1>ðŸ“š All Books</h1>
  </div>
</section>

<div class="container">
  <% if (books && books.length > 0) { %>
  <div class="table-container">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>ISBN</th>
            <th>Title</th>
            <th class="responsive-hide">Year</th>
            <th>Price(â‚¹)</th>
            <th class="responsive-hide">Publisher</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% books.forEach(book => { %>
          <tr>
            <td><span class="isbn-text"><%= book.isbn %></span></td>
            <td><strong><%= book.title %></strong></td>
            <td class="responsive-hide"><%= book.year %></td>
            <td>
              <span class="price"><%= book.price %></span>
            </td>
            <td class="responsive-hide"><%= book.publisher %></td>
            <td>
              <div class="actions-cell d-flex gap-2">
                <!-- âœï¸ Edit Button -->
                <a
                  href="/books/edit/<%= book.isbn %>"
                  class="btn btn-sm btn-warning-custom"
                >
                  Edit
                </a>

                <!-- ðŸ—‘ï¸ Delete Button -->
                <form
                  method="POST"
                  action="/books/delete/<%= book.isbn %>"
                  style="display: inline"
                  onsubmit="return confirm('Are you sure you want to delete this book?');"
                >
                  <button type="submit" class="btn btn-sm btn-danger-custom">
                    Delete
                  </button>
                </form>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <% } else { %>
  <div class="empty-state">
    <div class="empty-state-icon">ðŸ“­</div>
    <h2>No books found in the system.</h2>
    <p>Start by adding your first book to get started.</p>
  </div>
  <% } %>
</div>
