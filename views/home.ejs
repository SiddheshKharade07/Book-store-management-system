<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/home.css" />
<section class="hero-section">
  <div class="container">
    <h1>ðŸ“š BookStore Management System</h1>
    <p>Manage your inventory, authors, and customers with ease.</p>
    <div>
      <a href="/books" class="btn btn-light btn-lg cta-button">View Books</a>
      <a href="/books/new" class="btn btn-outline-light btn-lg cta-button"
        >Add New Book</a
      >
    </div>
  </div>
</section>

<section class="stats-section">
  <div class="container">
    <div class="row g-4">
      <a class="col-md-4 col-sm-6 books-count" href="/books">
        <div class="stat-card">
          <div class="stat-number"><%= totalBooks %></div>
          <div class="stat-label">Total Books</div>
        </div>
      </a>
      <a class="col-md-4 col-sm-6 authors-count" href="/authors">
        <div class="stat-card">
          <div class="stat-number"><%= totalAuthors %></div>
          <div class="stat-label">Total Authors</div>
        </div>
      </a>
      <a class="col-md-4 col-sm-6 publishers-count" href="/publishers">
        <div class="stat-card">
          <div class="stat-number"><%= totalPublishers %></div>
          <div class="stat-label">Total Publishers</div>
        </div>
      </a>
    </div>
  </div>
</section>

<section class="recent-books-section">
  <div class="container">
    <h2 class="section-title">Recent Books</h2>
    <div class="row g-4">
      <div class="col-lg-2 col-md-4 col-sm-6">
        <div class="card book-card">
          <img
            src="https://placehold.co/200x250"
            class="book-cover"
            alt="Book Title"
          />
          <div class="book-card-body">
            <h5 class="book-title">The Great Gatsby</h5>
            <p class="book-author">F. Scott Fitzgerald</p>
            <p class="book-price">$9.99</p>
          </div>
        </div>
      </div>
      <div class="col-lg-2 col-md-4 col-sm-6">
