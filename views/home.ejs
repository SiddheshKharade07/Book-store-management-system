<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/home.css" />

<section class="hero-section">
  <div class="container">
    <h1>ðŸ“š BookStore Management System</h1>
    <p>Manage your inventory, authors, and publishers with ease.</p>
    <div>
      <a href="/books/all" class="btn btn-light btn-lg cta-button"
        >View Books</a
      >
      <a href="/books/new" class="btn btn-outline-light btn-lg cta-button"
        >Add New Book</a
      >
    </div>
  </div>
</section>

<section class="stats-section">
  <div class="container">
    <div class="row g-4">
      <a class="col-md-4 col-sm-6 books-count" href="/books">
        <div class="stat-card">
          <div class="stat-number"><%= totalBooks %></div>
          <div class="stat-label">Total Books</div>
        </div>
      </a>
      <a class="col-md-4 col-sm-6 authors-count" href="/authors">
        <div class="stat-card">
          <div class="stat-number"><%= totalAuthors %></div>
          <div class="stat-label">Total Authors</div>
        </div>
      </a>
      <a class="col-md-4 col-sm-6 publishers-count" href="/publishers">
        <div class="stat-card">
          <div class="stat-number"><%= totalPublishers %></div>
          <div class="stat-label">Total Publishers</div>
        </div>
      </a>
    </div>
  </div>
</section>

<section class="recent-books-section">
  <div class="container">
    <h2 class="section-title">ðŸ“– Most Recently Released Books</h2>
    <div class="row g-4">
      <% if (recentBooks && recentBooks.length > 0) { %> <%
      recentBooks.forEach(book => { %>
      <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="card book-card text-center p-3">
          <div class="book-card-body">
            <h5 class="book-title"><%= book.title %></h5>
            <p class="book-author">
              <strong>Author:</strong> <%= book.author_name %>
            </p>
            <p><strong>Publisher:</strong> <%= book.publisher_name %></p>
            <p><strong>Year:</strong> <%= book.year %></p>
            <p class="book-price">
              <strong>Price:</strong> â‚¹<%= (book.price) %>
            </p>
          </div>
        </div>
      </div>
      <% }) %> <% } else { %>
      <div class="text-center mt-4">
        <p>No recently released books found.</p>
      </div>
      <% } %>
    </div>
  </div>
</section>
